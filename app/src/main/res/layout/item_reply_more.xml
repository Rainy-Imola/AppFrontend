<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/reply_rootView"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="40dp"

        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.jidcoo.android.widget.commentview.view.RoundAngleImageView
            android:id="@+id/ico"
            android:layout_width="26dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="6dp"
            android:layout_height="26dp"
            app:roundWidth="13dp"
            app:roundHeight="13dp"
            android:background="@drawable/ico" />

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/reply_item_userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/reply_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:textColor="#989898"
                android:textSize="10sp" />
        </LinearLayout>


        <ImageView
            android:id="@+id/reply_item_like"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="13dp"
            android:padding="5dp"
            android:src="@drawable/pxjh"
            android:visibility="visible" />

        <TextView
            android:id="@+id/prizes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="10dp"
            android:textColor="#666666"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/reply_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="88dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="2dp"
        android:textColor="#1C1C1C"
        android:textSize="15sp" />

</LinearLayout>