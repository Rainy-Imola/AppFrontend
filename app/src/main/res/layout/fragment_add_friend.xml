<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".commom_user_fragment.AddFriendFragment">

<com.loper7.layout.TitleBar
    android:id="@+id/commmon_return"
    android:layout_width="0dp"
    android:layout_height="50dp"
    app:layout_collapseMode="pin"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:tBackImage="@drawable/nav_return_icon_24"
    app:tBackgroundColor="@color/white"
    app:tCenterTitle="true"
    app:tTitleText="提交验证信息"
    app:tTitleTextColor="@android:color/primary_text_light"
    app:tTitleTextSize="16sp" />

    <EditText
        android:id="@+id/editTextTextMultiLine"
        android:layout_width="wrap_content"
        android:layout_height="99dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/textstyle"
        android:ems="10"
        android:gravity="start|top"
        android:hint="输入 验证信息，让对方看到"
        android:inputType="textMultiLine"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/commmon_return" />

    <Button
        android:id="@+id/button_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="提交"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextMultiLine" />

</androidx.constraintlayout.widget.ConstraintLayout>