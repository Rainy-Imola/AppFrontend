<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg3"
    tools:context=".commom_user_fragment.AddFriendFragment">

    <com.loper7.layout.TitleBar
        android:id="@+id/commmon_return"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_collapseMode="pin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tBackImage="@drawable/nav_return_white"
        app:tBackgroundColor="@color/white0"
        app:tUseRipple="true"
        app:tCenterTitle="true"
        app:tTitleText="提交验证信息"
        app:tTitleTextColor="@android:color/primary_text_light"
        app:tTitleTextSize="18sp" />

    <EditText
        android:id="@+id/editTextTextMultiLine"
        android:layout_width="303dp"
        android:layout_height="124dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/textstyle4"
        android:ems="10"
        android:gravity="start|top"
        android:hint="   Please Send Friend invitation."
        android:inputType="textMultiLine"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/commmon_return"
        app:layout_constraintVertical_bias="0.131" />

    <Button
        android:id="@+id/button_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Send"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextMultiLine"
        app:layout_constraintVertical_bias="0.164" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="136dp"
        android:layout_height="105dp"
        android:layout_marginTop="440dp"
        android:gravity="center"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/commmon_return"
        app:layout_constraintVertical_bias="0.948" />

</androidx.constraintlayout.widget.ConstraintLayout>