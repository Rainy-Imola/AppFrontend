<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/cover"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                app:actualImageScaleType="centerCrop"
                app:roundedCornerRadius="8dp"
                android:layout_marginVertical="6dp"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="20dp"
                app:overlayImage="@drawable/bg_round_rect"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cover"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:id="@+id/author_date_layout">

                <TextView
                    android:id="@+id/author_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    tools:text="author_name:" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/date_textView"
                    android:layout_gravity="right"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:textColor="#808080"
                    android:textSize="14sp"
                    android:layout_marginTop="5dp"
                    android:text="2021-5-8 10:48:37"
                    />

            </RelativeLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/author_date_layout"
                android:id="@+id/textScollView">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/contentDetail"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginVertical="4dp"
                    android:ellipsize="end"
                    tools:text="这是内容。。。。。。"/>
            </ScrollView>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/icon_layout"
                android:layout_below="@+id/textScollView">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/round_shape"
                    android:paddingLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:focusableInTouchMode="true"
                    android:layout_marginBottom="5dp">
                    <EditText
                        android:layout_width="300dp"
                        android:layout_height="match_parent"
                        android:id="@+id/postCommentText"
                        android:singleLine="true"
                        android:hint="快来发表你的评论吧"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:id="@+id/postCommentButton"
                        android:text="发送"
                        android:textSize="12sp"
                        android:layout_toRightOf="@id/postCommentText"
                        android:paddingRight="2dp"
                        android:gravity="center_horizontal"/>
                </LinearLayout>


            </RelativeLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/constraintLayout"
                android:layout_below="@+id/icon_layout">
                <com.jidcoo.android.widget.commentview.CommentView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/commentView"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>