<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/modifyname"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".modify_fragment.modify_nameFragment">

    <com.loper7.layout.TitleBar
        android:id="@+id/commmon_return"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_collapseMode="pin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tBackImage="@drawable/nav_return_white"
        app:tBackgroundColor="@color/white"
        app:tCenterTitle="true"
        app:tUseRipple="true"
        app:tMenuText="保存"
        app:tTitleText="name"
        app:tTitleTextColor="@android:color/primary_text_light"
        app:tTitleTextSize="16sp" />

    <EditText
        android:id="@+id/new_name"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/textstyle"
        android:drawableLeft="@drawable/ic_baseline_person_24"
        android:hint="  Enter your new username"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/commmon_return" />


</androidx.constraintlayout.widget.ConstraintLayout>